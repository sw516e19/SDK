{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cd workspace; make app=cannon-alpha;",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "bluetooth upload",
            "type": "shell",
            "command": "cd workspace; make upload ip=10.0.10.1 from=app to=cannon-alpha",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "build"
            ],
            "problemMatcher": [
                "$lessc"
            ]
        }
    ]
}